<%- include ('../layouts/adminHeader.ejs') %>

  <div class="container-fluid">

    <div class="container">
      <!-- Title -->
      <div class="d-flex justify-content-between align-items-center py-3">
        <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #<%=orders._id%>
        </h2>
      </div>

      <!-- Main content -->
      <div class="row">
        <div class="col-lg-8">
          <!-- Details -->
          <div class="card mb-4">
            <div class="card-body">
              <div class="mb-3 d-flex justify-content-between">
                <div>
                  <span class="me-3">
                    <%=orders.createdAt%>
                  </span>
                  <!-- <span class="me-3">#16123222</span>
                  <span class="me-3">Visa -1234</span> -->
                  <span class="badge rounded-pill bg-info">
                    <%=orders.status%>
                  </span>
                </div>
                <div class="d-flex">
                  <a href="/cancelorder?id=<%=orders._id%>">cancel</a>
                  <div class="dropdown">
                    <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                      <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                      <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <table class="table table-borderless">
                <% for(let key of orders.products.item) { %>

                  <tbody>
                    <tr>
                      <td>
                        <div class="d-flex mb-2">
                          <div class="flex-shrink-0">
                            <img src="uploads/<%=key.productId.image[0]%>" alt="" width="70" class="img-fluid">
                          </div>
                          <div class="flex-lg-grow-1 ms-3">
                            <h6 style="color: rgb(100, 91, 91);" class="small mb-0"><a href="#" class="text-reset">
                                <%=key.productId.name%>
                              </a></h6>
                            <span class="small">Color: Black</span>
                          </div>
                        </div>
                      </td>
                      <td>Quantity:<%=key.qty%>
                      </td>
                      <td class="text-end">Price:<%=key.productId.price%>
                      </td>
                    </tr>
                    <% } %>
                      <!-- <tr>
                    <td>
                      <div class="d-flex mb-2">
                        <div class="flex-shrink-0">
                          <img src="https://www.bootdey.com/image/280x280/FF69B4/000000" alt="" width="35" class="img-fluid">
                        </div>
                        <div class="flex-lg-grow-1 ms-3">
                          <h6 class="small mb-0"><a href="#" class="text-reset">Smartwatch IP68 Waterproof GPS and Bluetooth Support</a></h6>
                          <span class="small">Color: White</span>
                        </div>
                      </div>
                    </td>
                    <td>1</td>
                    <td class="text-end">$79.99</td>
                  </tr> -->
                  </tbody>
                  <tfoot>
                    <tr class="fw-bold">
                      <td colspan="2">TOTAL</td>
                      <td class="text-end">
                        <%=orders.payment.amount%>
                      </td>
                    </tr>
                  </tfoot>
              </table>
            </div>
          </div>
          <!-- Payment -->
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <p><strong> Payment Status:</strong></p>
                  <p>
                    <%=orders.payment.method%> <br>
                      Total:<%=orders.payment.amount%> <span class="badge bg-success rounded-pill text">PAID</span>
                  </p>
                  <% if(orders.paymentDetails){%>
                    <p><strong> Payment Details:</strong></p>
                    <p>Receipt no:<%= orders.paymentDetails.reciept%>
                    </p>
                    <p>Payment Status:<%= orders.paymentDetails.status%>
                    </p>
                    <p>Created At:<%= orders.paymentDetails.createdAt%>
                    </p>



                    <%}%>
                </div>
                <div class="col-lg-6">
                  <h3 class="h6">Billing address</h3>
                  <address>
                    <strong>
                      <%=orders.address.firstname%>
                        <%=orders.address.lastname%>
                    </strong><br>
                    <%=orders.address.address%><br>
                      Pin:<%=orders.address.zip%> <br>
                        Phone:<%=orders.address.mobile%>
                          <!-- <abbr title="Phone">P:</abbr>  -->
                  </address>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <!-- Customer Notes -->
          <div class="card mb-4">
            <div class="card-body">
              <h3 class="h6">Thanks for your Order,</h3>
              <p>Sed enim, faucibus litora velit vestibulum habitasse. Cras lobortis cum sem aliquet mauris rutrum.
                Sollicitudin. Morbi, sem tellus vestibulum porttitor.</p>
            </div>
          </div>
          <div class="card mb-4">
            <!-- Shipping information -->
            <div class="card-body">
              <h3 class="h6">Shipping Information</h3>
              <strong>FedEx</strong>
              <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i
                  class="bi bi-box-arrow-up-right"></i> </span>
              <hr>
              <h3 class="h6">Address</h3>
              <address>
                <strong>
                  <%=orders.address.firstname%>
                    <%=orders.address.lastname%>%>
                </strong><br>
                <%=orders.address.address%><br>
                  Pin:<%=orders.address.zip%> <br>
                    Phone:<%=orders.address.mobile%>
              </address>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ('../layouts/adminFooter.ejs') %>