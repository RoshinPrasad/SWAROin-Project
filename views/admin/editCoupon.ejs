<%- include ('../layouts/adminHeader.ejs') %>

    
        <h4 class="text-center text-success my-5"> EDIT COUPON</h4>
        <h4 class="text-center text-primary my-1">
            <%=message%>
        </h4>

        <form action="/admin/edit-coupon" method="post">
            <input type="hidden" name="id" value="<%=coupon._id%>">
            <!-- Email input -->
            <div class=" mb-4 ">
                <input style="margin-left: 25%; margin-right: 30%;" type="text" id="addCategories" name="coupName"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" placeholder="Enter coupon name"
                    required value="<%=coupon.name %>" />
                <input style="margin-left: 25%; margin-right: 30%;" type="number" id="addCategories" name="coupDis"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" placeholder="Enter discound"
                    required value="<%=coupon.discount %>" />
                <input style="margin-left: 25%; margin-right: 30%;" type="number" id="addCategories" name="coupMin"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" placeholder="minimumvalue" required
                    value="<%=coupon.minimumvalue %>" />
                <input style="margin-left: 25%; margin-right: 30%;" type="number" id="addCategories" name="coupMax"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" placeholder="maximumvalue" required
                    value="<%=coupon.maximumvalue %>" />
                <input style="margin-left: 25%; margin-right: 30%;" type="date" id="addCategories" name="coupDate"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" placeholder="maximumvalue" required
                    value="<%=coupon.expiryDate %>" />
                <span id="Email"></span>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <a style="margin-left: 40%;"><button type="submit" class="btn-success rounded-2 p-2">Save</button></a>
        </form>
        <a style="margin-right: 40%;" href="/admin/loadCoupon"><button type="button"
                class="btn-primary rounded-2 p-2">cancel</button></a>

    </div>
    <%- include ('../layouts/adminFooter.ejs') %>